{
  "compilerOptions": {
    "module": "commonjs",
     "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"],
      "@/*": ["src/*"],
      "src/*": ["src/*"],
      "@/models/*": ["src/models/*"],
      "@/core/*": ["src/core/*"],
      "@/modules/*": ["src/modules/*"]
    },
    "incremental": true
  }
}
